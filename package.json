{
  "scripts": {
    "watch-js": "webpack --watch --config webpack.config.js --mode development",
    "build-js": "webpack --config webpack.config.js --mode production",
    "watch-css": "node-sass app/css/index.scss --watch --output public --output-style compressed",
    "build-css": "node-sass app/css/index.scss --output public --output-style compressed",
    "watch": "yarn watch-js && yarn watch-css",
    "build": "yarn build-js && yarn build-css"
  },
  "devDependencies": {
    "node-sass": "^4.13.0",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "workbox-webpack-plugin": "^5.0.0"
  }
}
