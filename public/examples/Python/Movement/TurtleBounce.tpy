# set starting point and velocity
setxy(100, 700)
xVelocity = 8
yVelocity = -4
while (0 < 1):
  noupdate()
  # rub out existing ball
  colour(white)
  blot(51)
  # move to next location
  movexy(xVelocity, yVelocity)
  # draw new ball
  colour(red)
  blot(50)
  update()
  pause(10)
  # "bounce" (i.e. invert velocity) at canvas edges
  if (turtx < 50) or (turtx > 950):
    xVelocity = -xVelocity
  if (turty < 50) or (turty > 950):
    yVelocity = -yVelocity
