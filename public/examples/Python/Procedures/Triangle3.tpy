# draws a triangle of the specified size,
# but only if that size is greater than 1
def triangle(size):
  if (size > 1):
    forward(size)
    right(120)
    forward(size)
    right(120)
    forward(size)
    right(120)

# move to start, without drawing
movexy(-100, 150)
# draw a triangle of size 256
triangle(256)
