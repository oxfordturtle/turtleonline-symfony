REM make the canvas black
BLANK(BLACK)
REM position the turtle
FORWARD(15)
REM set line thickness and initial length
THICKNESS(27)
lineLength% = 20
REM repeatedly call the lineTurn procedure and increase lineLength
REPEAT
  RNDCOL(40)
  PROClineTurn
  lineLength% = lineLength% + 10
UNTIL lineLength% > 500
END

REM draws a line a turns right
DEF PROClineTurn
  FORWARD(lineLength%)
  RIGHT(60)
ENDPROC
