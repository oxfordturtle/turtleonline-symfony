BLOT(1000)
THICKNESS(8)
REM repeatedly draw circles or blots in a grid
REPEAT
  SETX(RND(8) * 111)
  SETY(RND(8) * 111)
  PROCdrawit(RND(2) = 1)
UNTIL FALSE
END

REM draws a circle or a blot
DEF PROCdrawit(doblot%)
  IF doblot% THEN
    REM draw a randomly coloured blot
    RNDCOL(10)
    BLOT(25)
  ELSE
    REM rub out any previous blot
    COLOUR(BLACK)
    BLOT(25)
    REM draw a randomly coloured circle
    RNDCOL(10)
    CIRCLE(25)
  ENDIF
ENDPROC
