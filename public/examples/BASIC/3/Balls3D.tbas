RIGHT(60)
REM draw a blue ball
SETXY(250, 250)
PROCball3d(&00FFFF, &50000)
REM draw an orange ball
SETXY(750, 250)
PROCball3d(&D2691E, &10102)
REM draw a red ball
SETXY(250, 750)
PROCball3d(&A90000, &20202)
REM draw a yellow ball
SETXY(750, 750)
PROCball3d(&FFA500, &101)
END

REM draw a 3d-style coloured ball
DEF PROCball3d(colr%, step%)
  COLOUR(colr%)
  FOR count% = 40 TO 1 STEP -1
    BLOT(count% * 6)
    FORWARD(3)
    turtc% = turtc% + step%
  NEXT
ENDPROC
