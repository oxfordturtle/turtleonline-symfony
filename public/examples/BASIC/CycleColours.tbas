REM black out the canvas and initialise variables
BLANK(BLACK)
colourInc% = RND(5) - 1
colourCode% = RND(20)
COLOUR(RGB(colourCode%))
lineLength% = 0
THICKNESS(16)
REM draw a spiral of lines of increasing length, cycling through different colours
REPEAT
  colourCode% = ((colourCode% + colourInc%) MOD 20) + 1
  COLOUR(RGB(colourCode%))
  lineLength% = lineLength% + 1
  FORWARD(lineLength%)
  RIGHT(30)
UNTIL lineLength% > 250
END
