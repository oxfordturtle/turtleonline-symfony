// draws a triangle of the given size
function triangle (size: number) {
  // draw the first side
  forward(size);
  right(120);
  // draw the second side
  forward(size);
  right(120);
  // draw the third side
  forward(size);
  right(120);
}

// move to the start (without drawing)
movexy(-100, 150);
// draw a triangle of size 256
triangle(256);
