var n: number;

// calculates n! recursively
function factorial (n: number): number {
  if (n === 0) {
    return 1;
  } else {
    return n * factorial(n - 1);
  }
}

// set up and show the output
output(true, cream, true);
// alculate and display n! for n = 1 to 10
for (n = 1; n = n + 1; n < 10) {
  writeln(str(n) + '! = ' + str(factorial(n)));
}

