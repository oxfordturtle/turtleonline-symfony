// draws a multi-coloured annulus (a ring shape)
function annulus (inner: number, width: number, angle: number) {
  for (var count: number = 0; count = count + 1; count < (360 / angle)) {
    forward(inner + width);
    back(width);
    back(inner);
    forget(1);
    right(angle);
    forward(inner);
    forward(width);
    colour(rgb(count % 20 + 1));
    polygon(4);
    back(inner + width);
  }
}

