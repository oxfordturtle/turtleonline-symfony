// draws a triangle of the given size, only if size > 1
function triangle (size: number) {
  if (size > 1) {
    forward(size);
    right(120);
    forward(size);
    right(120);
    forward(size);
    right(120);
  }
}

// move to the start (without drawing)
movexy(-100, 150);
// draw a triangle of size 256
triangle(256);
