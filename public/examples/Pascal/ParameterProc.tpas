PROGRAM ParameterProc;
VAR count: integer;

  {draws a prong of the given size}
  Procedure prong(size: integer);
  Begin
    forward(size);
    blot(size / 20);
    back(size)
  End;

BEGIN
  {draw 360 prongs of decreasing size}
  for count := 360 downto 1 do
    begin
      randcol(10);
      prong(count + 100);
      right(61)
    end
END.
