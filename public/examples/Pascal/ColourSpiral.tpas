PROGRAM ColourSpiral;
VAR lineLength: integer;

  {draws a line and turns right}
  Procedure lineTurn;
  Begin
    forward(lineLength);
    right(60)
  End;

BEGIN
  {make the canvas black}
  blank(black);
  {position the turtle}
  forward(15);
  {set line thickness and length}
  thickness(27);
  lineLength := 20;
  {repeatedly call the lineTurn procedure and increment lineLength}
  repeat
    randcol(40);
    lineTurn;
    lineLength := lineLength + 10
  until lineLength > 500
END.
