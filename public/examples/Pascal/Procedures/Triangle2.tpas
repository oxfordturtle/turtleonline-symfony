PROGRAM Triangle2;

  {draws a triangle of the given size}
  Procedure triangle(size: integer);
  Begin
    {draw first side, and turn}
    forward(size);
    right(120);
    {draw second side, and turn}
    forward(size);
    right(120);
    {draw third side, and turn}
    forward(size);
    right(120)
  End;

BEGIN
  {move to start, without drawing}
  movexy(-100, 150);
  {draw a triangle of size 256}
  triangle(256)
END.