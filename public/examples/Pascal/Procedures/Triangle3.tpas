PROGRAM Triangle3;

  {draws a triangle of the specified size,}
  {but only if that size is greater than 1}
  Procedure triangle(size: integer);
  Begin
    if size > 1 then
      begin
        forward(size);
        right(120);
        forward(size);
        right(120);
        forward(size);
        right(120)
      end
  End;

BEGIN
  {move to the start, without drawing}
  movexy(-100, 150);
  {draw a triangle of size 256}
  triangle(256)
END.
