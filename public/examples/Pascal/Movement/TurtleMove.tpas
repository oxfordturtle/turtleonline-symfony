PROGRAM TurtleMove;
VAR count: integer;
BEGIN
  {set starting point}
  setxy(100, 700);
  for count := 1 to 100 do
    begin
      noupdate;
      {rub out previous ball}
      colour(white);
      blot(51);
      {move to next point}
      movexy(8, -4);
      {draw new ball}
      colour(red);
      blot(50);
      update;
      pause(10)
    end
END.
