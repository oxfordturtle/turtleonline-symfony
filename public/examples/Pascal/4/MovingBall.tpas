PROGRAM MovingBall;
VAR x, y, count: integer;
BEGIN
  {set starting point}
  x := 100;
  y := 700;
  for count := 1 to 100 do
    begin
      noupdate;
      {rub out the previous ball}
      colour(white);
      blot(51);
      {move to the next point}
      x := x + 8;
      y := y - 4;
      setxy(x, y);
      {draw a new ball}
      colour(red);
      blot(50);
      update;
      pause(10)
    end
END.
