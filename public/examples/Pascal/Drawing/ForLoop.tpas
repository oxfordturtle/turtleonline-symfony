PROGRAM ForLoop;
VAR count: integer;
BEGIN
  {counting from 1 to 200 ...}
  for count := 1 to 200 do
    begin
      {move forward and turn right 5 degrees}
      forward(count / 3);
      right(5);
      {draw a red blot radius 200}
      colour(red);
      blot(200);
      {draw a black circle around the red blot}
      colour(black);
      circle(200)
    end
END.
