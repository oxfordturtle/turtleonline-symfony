PROGRAM TriangleSpin;
VAR i: integer;
BEGIN
  {adjust start position so pattern is central}
  movexy(30, 20);
  {counting from 1 to 300 ...}
  for i := 1 to 300 do
    begin
      {move forward by 3 times the count number}
      forward(i * 3);
      {turn right by 121 degrees}
      right(121)
    end
END.
