class Triangle2 {
  // draws a triangle of the given size
  void triangle (int size) {
    // draw the first side
    forward(size);
    right(120);
    // draw the second side
    forward(size);
    right(120);
    // draw the third side
    forward(size);
    right(120);
  }

  void main () {
    // move to the start (without drawing)
    moveXY(-100, 150);
    // draw a triangle of size 256
    triangle(256);
  }
}
