void main () {
  int count;
  int x, y;
  int nextColour;
  // draw 10 random ellipses
  for (count = 0; count < 10; count = count + 1) {
    setxy(random(1500) - 250, random(1500) - 250);
    ellipse(random(500) + 500, random(500) + 500);
  }
  // try to fill all the ellipses with colours
  for (count = 0; count < 10000; count = count + 1) {
    // pick a random point
    x = random(1000);
    y = random(1000);
    // if it's white, set the next colour and fill the shape with it
    if (pixcol(x, y) == white) {
      nextColour = (nextColour % 20) + 1;
      recolour(x, y, rgb(nextColour));
    }
  }
}
